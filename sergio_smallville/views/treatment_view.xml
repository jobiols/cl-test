<?xml version="1.0" ?>
<odoo>
	<data>  

		<record id="treatment_tree_field" model="ir.ui.view">
			<field name="name">treatments_field</field>
			<field name="model">treatment</field>
			<field name="arch" type="xml">
				<tree string="Treatments" create="true">
					<field name="code"/>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="treatment_tree_view" model="ir.ui.view">
			<field name="name">Treatments Tree</field>
			<field name="model">treatment</field>
			<field name="arch" type="xml">
				<tree string="Treatments" create="true">
					<field name="code"/>
					<field name="name"/>
					<field name="doctor"/>
				</tree>
			</field>
		</record>

		<record id="treatment_form_view" model="ir.ui.view">
			<field name="name">Treatments Form</field>
			<field name="model">treatment</field>
			<field name="arch" type="xml">
				<form string="Treatments">
					<sheet>
						<group>
							<group>
								<field name="code"/>
								<field name="name"/>
								<field name="doctor"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
        <!-- <record id="treatment_search_view" model="ir.ui.view">
            <field name="name">Treatments Search</field>
            <field name="model">treatment</field>
            <field name="arch" type="xml">
                <search string="Treatments">
                </search>
            </field>
        </record> -->

		<record id="action_treatment" model="ir.actions.act_window">
			<field name="name">Treatments</field>
			<field name="res_model">treatment</field>
			<field name="view_type">form</field>
			<!-- <field name="search_view_id" ref="treatment_search_view"/> -->
			<field name="view_id" ref="treatment_tree_view"/>
			<field name="help" type="html">
			<div>
				<br/><br/><br/>
				<p>
				<b>Create information of treatments.</b>
				</p>
			</div>
		</field>
		</record>

		<menuitem id="menu_treatments" name="Treatments"
			parent="vertical_hospital.hospital_main_menu" sequence="2"
			action="vertical_hospital.action_treatment"/>
   	
  </data>
</odoo>
