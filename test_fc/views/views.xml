<odoo>
  <data>

    <record id="pruebafc_res_partner_form" model="ir.ui.view">
    <field name="name">pruebafc.res.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <field name="industry_id" position="after">
          <field name="es_frecuente" />
          <field name="puntuacion" attrs="{'invisible':[('es_frecuente', '!=', True)]}" />
      </field>
    </field>
  </record>

 <record id="verificar_cantidad_presupuestos" model="ir.cron">
       <field name="name">Verificar cantidad de Presupuestos</field>
       <field name="model_id" ref="model_verificar_presupuestos"/>
       <field name="state">code</field>
       <field name="code">model.verificar_cantidad()</field>
       <field name="user_id" ref="base.user_root"/>
       <field name='interval_number'>1</field>
       <field name='interval_type'>days</field>
       <field name="numbercall">-1</field>
       <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 13:00:00')" />
       <field name="doall" eval="False"/>
   </record>

    <!-- explicit list view definition -->
    
    <record id="lagartijas_action" model="ir.actions.act_window">
      <field name="name">Lagartijas</field>
      <field name="res_model">lagartijas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_lagartijas" model="ir.ui.view">
         <field name="name">lagartijas.tree</field>
         <field name="model">lagartijas</field>
         <field name="arch" type="xml">
            <tree>
    <field name="apodo" />
    <field name="peso" />
    <field name="alta" />
    <field name="write_uid" optional="hide"/>
            </tree>
         </field>
    </record>

    <menuitem name="Lagartijas" id="menu_lagartijas"
    action="lagartijas_action"
                parent="sale.menu_sale_general_settings"
                sequence="70"/>

